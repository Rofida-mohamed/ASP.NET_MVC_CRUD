@model IEnumerable<Department>

@{
    ViewData["Title"] = "Department List";
   
}
    <table class ="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Department Name</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count() == 0)
            {
                <tr>
                    <td colspan="2">No Department</td>
                </tr>
            }
            else
            {
                foreach(var item in Model)
                {
                    <tr>
                        <td>@item.DeptId</td>
                        <td>@item.DeptName</td>
                        <td><a class="btn btn-info" href="/department/details/@item.DeptId" >Details</a></td>
                        <td><a class="btn btn-danger" href="/department/Delete/@item.DeptId" onclick="return confirm('are you sure')">Delete</a></td>
                        <td><a class="btn btn-success" href="/department/edit/@item.DeptId">Edit</a></td>
                    </tr>
                }
            }
        </tbody>
    </table>
<a class="btn btn-success" asp-action="create" >Create</a>



