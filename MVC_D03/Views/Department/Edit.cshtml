@model Department
@{
    ViewData["Title"] = "Edit Department";
    
}
    <div class="m-3">
        <h4 class="text-success">Edit Department</h4>
        <form class="col-lg-3 col-md-5 col-sm-10"  asp-action="edit" asp-controller="department" asp-route-id="@Model.DeptId">
            <div class="form-group row mb-2">
                <label asp-for="DeptId" class=" col-form-label">ID</label>
                <div class="">
                    <input  class="form-control" asp-for="DeptId" readonly>
                </div>
            </div>
            <div class="form-group row mb-2">
                <label asp-for="DeptName" class="col-form-label">Name</label>
                <div class="">
                    <input asp-for="DeptName" class="form-control" >
                </div>
            </div>


            <div class="form-group row  mt-3 ">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success">Edit</button>
                </div>
            </div>
        </form>
    </div>

