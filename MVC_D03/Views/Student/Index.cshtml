@model List<Student> 
@{
    ViewData["Title"] = "Student List";
    
}
    <div class="m-3 col-lg-4 col-md-8 col-sm-10">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Department</th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Age</td>
                        <td>@(item.Department != null ? item.Department.DeptName : "N/A")</td>
                        <td>
                            <a class="btn btn-info" asp-action="edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-danger" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('are you sure')">Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
            
        </table>
        <a class="btn btn-success" asp-action="create">Create</a>
    </div>
    

